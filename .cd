#!/bin/bash

info " Rain World"
debug " LET IT RAIN"

help .cd | indent

# setup directories
rain_home=$(pwd)
rain_lib="$rain_home/lib"
rain_src="$rain_home/src"
rain_build="$rain_home/build"
rain_dist="$rain_home/dist"

function build() {
  mvn clean compile assembly:single
  #mvn install
}

function upload() {
  if [ ! -d "test" ]; then
    err "Expected test server at ./test" && return
  fi
  
  jar=target/rainworld-1.0-SNAPSHOT-jar-with-dependencies.jar
  cp $jar test/plugins/RainWorld.jar
  (cd test && ./run.sh test)
}

function test() {
  build
  upload
}

function dev() {
  test
  echo "restarting... ctrl+C to cancel"
  sleep 1
  dev
}
