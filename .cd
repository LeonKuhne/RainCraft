#!/bin/bash

info " rain craft"
debug " LET IT RAIN"

help .cd | indent

# setup directories
rain_home=$(pwd)
rain_lib="$rain_home/lib"
rain_src="$rain_home/src"
rain_build="$rain_home/build"
rain_dist="$rain_home/dist"

function build() {
  mvn install
}

function test() {
  build
  cp target/rainworld-1.0-SNAPSHOT.jar test/plugins/RainWorld.jar
  cd test
  ./run.sh test
  cc ..
}

function dev() {
  test
  echo "restarting... ctrl+C to cancel"
  sleep 1
  dev
}
